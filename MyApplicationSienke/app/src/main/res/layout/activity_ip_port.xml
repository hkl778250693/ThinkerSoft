<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/statistics_bg"
    android:orientation="vertical">
    <!-- 标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1A4B76"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/set_ip_port_back_Btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onAction">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/mune_btn_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center">

            <TextView
                android:id="@+id/textviewshezi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IP、端口"
                android:textColor="#FFECEC"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_set_ip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/editbox_background_normal"
            android:digits="1234567890."
            android:gravity="left|center"
            android:hint="请输入IP"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_set_port"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/editbox_background_normal"
            android:digits="1234567890"
            android:gravity="left|center"
            android:hint="请输入端口号"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_set_ip_port_done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_1"
            android:text="确 定"
            android:textColor="#FFFFFFFF"
            android:textSize="23sp" />
    </LinearLayout>
</LinearLayout>
