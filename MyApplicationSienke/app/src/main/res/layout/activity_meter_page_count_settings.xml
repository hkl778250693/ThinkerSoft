<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_linearlayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_thin"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <!-- 标题 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_colors">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back_selector"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="每页条数"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/page_count_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/normal_button_bg_selector"
        android:digits="1234567890"
        android:gravity="center"
        android:hint="设置数量"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textColorHint="@color/text_gray"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_detail_save_btn_selector"
        android:text="保 存"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
</LinearLayout>
