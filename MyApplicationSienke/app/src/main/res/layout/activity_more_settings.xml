<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_colors">
        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/back_selector"
            android:drawablePadding="3dp"
            android:textColor="@android:color/white"
            android:padding="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/gray_thin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayout_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP："
            android:textColor="@android:color/white"
            android:background="@drawable/button_selector"
            android:padding="8dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/ip_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入接口地址"
            android:text="88.88.88.31:8080"
            android:textColor="@color/text_gray"
            android:padding="8dp"
            android:background="@null"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayout_shape">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务电话："
            android:textColor="@android:color/white"
            android:background="@drawable/button_selector"
            android:padding="8dp"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/serve_phone_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入电话号码"
            android:text="023-12345678"
            android:textColor="@color/text_gray"
            android:padding="8dp"
            android:background="@null"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/gray_thin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <Button
            android:id="@+id/modify"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="编辑"
            android:textSize="15sp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="保存"
            android:textSize="15sp"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
