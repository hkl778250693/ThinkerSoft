<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/home_page_more_shape">

        <RadioButton
            android:id="@+id/settings"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/meter_settings_layout_selector"
            android:button="@null"
            android:drawableLeft="@mipmap/settings"
            android:drawableStart="@mipmap/settings"
            android:drawablePadding="10dp"
            android:padding="8dp"
            android:text="系统设置"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View
            android:layout_width="120dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_thin" />

        <RadioButton
            android:id="@+id/quite"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/more_settings_last_one_selector"
            android:button="@null"
            android:drawableLeft="@mipmap/exit"
            android:drawableStart="@mipmap/exit"
            android:drawablePadding="10dp"
            android:padding="8dp"
            android:text="退出登录"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
    </RadioGroup>

</LinearLayout>