<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/area_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="选择分区"
            android:background="@drawable/public_info_radio_bg"
            android:textColor="@color/text_blue"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <ListView
            android:id="@+id/area_list_view"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:divider="@color/gray_thin"
            android:dividerHeight="1dp"
            android:listSelector="#00000000"
            android:scrollbarThumbVertical="@color/text_blue"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/book_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="选择表册"
            android:background="@drawable/public_info_radio_bg"
            android:textColor="@color/text_blue"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <ListView
            android:id="@+id/book_list_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@color/white_transparent"
            android:dividerHeight="8dp"
            android:listSelector="#00000000"
            android:background="@color/gray_thin"
            android:padding="5dp"
            android:scrollbarThumbVertical="@color/text_blue"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="2dp"/>
    </LinearLayout>
</LinearLayout>
