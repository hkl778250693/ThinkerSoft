<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp">

    <TextView
        android:id="@+id/popwindow_content_mapMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/popwindow_mapmeter_bg"
        android:drawableStart="@mipmap/popwindow_mapmeter_bg"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="地图抄表"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/popwindow_content_gpscollector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/popwindow_gpscollector_bg"
        android:drawableStart="@mipmap/popwindow_gpscollector_bg"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="坐标管理"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/popwindow_content_actualtask_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popwindow_content_actualtask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/popwindow_missions_bg"
            android:drawableStart="@mipmap/popwindow_missions_bg"
            android:gravity="center"
            android:minHeight="60dp"
            android:text="任务管理"
            android:textColor="#858585"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/popwindow_content_sysSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/popwindow_sysset_bg"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="系统设置"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />
</LinearLayout>